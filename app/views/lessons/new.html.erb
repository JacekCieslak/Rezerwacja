<%= form_for :lesson, url: lessons_path, html: { method: :post, :class => "form-horizontal"} do |f| %>
        <% if @lesson.errors.any? %>
        <div class="alert bg-danger">
            <a href="#" class="close" data-dismiss="alert">&times;</a>
            The form contains <%= pluralize(@lesson.errors.count, "error") %>.
            <ul>
                <% @lesson.errors.full_messages.each do |msg| %>
                <li>
                    * <%= msg %>
                </li>
                <% end %>
            </ul>
        </div>
        <% end %>
 		<div class="form-group">
        <%= f.label "Nazwa zajęc", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
        </div>

         <div class="form-group">
        <%= f.label "Godzina rozpoczecia", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.select(:hour, ["8:00","10:00","12:00", "14:00", "16:00", "18:00"], {}, {class: "form-control"} ) %>
        </div>

         <div class="form-group">
        <%= f.label "Dzień tygodnia", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.select(:day, ["Poniedziałek","Wtorek","Środa", "Czwartek", "Piątek"], {}, {class: "form-control"} ) %>
        </div>
 
 		<div class="form-group">
        <%= f.label "Wybierz tydzień", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
           <%= f.select(:week_type, ["A","B","AB"], {}, {class: "form-control"} ) %>
        </div>


        <div class="form-group">
        <%= f.label "Sala ID", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.collection_select(:room_id, Room.all, :id, :name) %>
        </div>

         <div class="form-group text-center">
        	<%= f.submit "Zapisz", class: "btn btn-primary active btn-lg" %>
    	</div>

    <% end %>