<%= form_for :lesson, url: lessons_path, html: { method: :post, :class => "form-horizontal"} do |f| %>

 		<div class="form-group">
        <%= f.label "Nazwa zajęc", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
        </div>

         <div class="form-group">
        <%= f.label "Godzina rozpoczecia", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :hour, class: "form-control" %>
        </div>

         <div class="form-group">
        <%= f.label "Dzień tygodnia", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :day, class: "form-control" %>
        </div>
 
 		<div class="form-group">
        <%= f.label "Tydzień A/B", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :week_type, class: "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label "Sala ID", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :room_id, class: "form-control" %>
        </div>

         <div class="form-group text-center">
        	<%= f.submit "Zapisz", class: "btn btn-primary active btn-lg" %>
    	</div>

    <% end %>