
<%= form_for :employee, url: employees_path, html: { method: :post, :class => "form-horizontal"} do |f| %>

    <div class="form-group">
        <%= f.label "Imię", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :name, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label "Nazwisko", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :surname, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label "stopień naukowy", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :degree, class: "form-control" %>
        </div>
    </div>
    <div class="form-group" id="sandbox-container">
        <%= f.label "email", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :email, class: 'form-control' %>
        </div>
    </div>
    <div class="form-group">
        <%= f.label "password", :class => "col-sm-2 control-label" %>
        <div class="col-sm-9">
            <%= f.text_field :password, class: "form-control" %>
        </div>
    </div>

    <div class="form-group text-center">
        <%= f.submit "Zapisz", class: "btn btn-primary active btn-lg" %>
    </div>
    <% end %>